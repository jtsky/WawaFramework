<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wawa="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/base_common_colorPrimary"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <Button
            android:id="@+id/btn_net"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="网络测试" />

        <Button
            android:id="@+id/btn_arouter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="路由测试" />

        <Button
            android:id="@+id/btn_mvp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="mvp测试" />

        <Button
            android:id="@+id/btn_h5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="h5跳转测试" />
        <!--新手引导页-->
        <Button
            android:id="@+id/btn_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="新手引导测试" />
        <!--动画测试-->
        <Button
            android:id="@+id/btn_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="积分动画测试" />


        <Button
            android:id="@+id/btn_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:text="倒计时" />

        <com.duiba.component_base.widget.WawaSeekBar
            android:id="@+id/wawa_countdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#C2E1FF"
            wawa:base_count_down="true"
            wawa:base_default_progress="100"
            wawa:base_progress_style_common="@drawable/base_countdown_progressbar"
            wawa:base_progress_style_last="@drawable/base_countdown_progressbar3"
            wawa:base_progressbar_height="15dp"
            wawa:base_progressbar_margin="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:filterTouchesWhenObscured="true"
                android:text="递增" />

            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:filterTouchesWhenObscured="true"
                android:text="重置" />

        </LinearLayout>


        <com.duiba.component_base.widget.WawaSeekBar
            android:id="@+id/wawa_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#C2E1FF"
            wawa:base_count_down="false"
            wawa:base_default_progress="0"
            wawa:base_progress_style_common="@drawable/base_score_progressbar"
            wawa:base_progress_thumb_activity="@drawable/base_star_active"
            wawa:base_progress_thumb_common="@drawable/base_star_common"
            wawa:base_progressbar_height="15dp"
            wawa:base_progressbar_margin="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24sp"
            android:fontFamily="@font/nobile_bold_italic"
            android:text="我是自定义字体"
            android:textSize="20sp"
            android:typeface="monospace" />


    </LinearLayout>
</ScrollView>


